{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "foundry-items.json",
	"version": "1.2.1",
	"type": "object",
	"properties": {
		"magicvariant": {
			"$ref": "util-foundry.json#/$defs/foundrySideDataGenericArray"
		},
		"item": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"additionalProperties": false,
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"$ref": "util.json#/$defs/source"
					},
					"system": {
						"$ref": "util-foundry.json#/$defs/foundrySystemObject"
					},
					"effects": {
						"type": "array",
						"items": {
							"$ref": "util-foundry.json#/$defs/foundryEffectObject"
						}
					},
					"flags": {
						"$ref": "util-foundry.json#/$defs/foundryFlagsObject"
					},
					"img": {
						"type": "string"
					},
					"_merge": {
						"type": "object",
						"description": "If our \"X\" (e.g. \"system\") should be merged with any base \"X\", rather than overwriting.",
						"properties": {
							"system": {
								"const": true
							},
							"chooseSystem": {
								"const": true
							},
							"effects": {
								"const": true
							},
							"flags": {
								"const": true
							},
							"chooseFlags": {
								"const": true
							}
						}
					},
					"type": {
						"type": "string",
						"enum": [
							"weapon",
							"tool",
							"consumable",
							"equipment",
							"container",
							"loot"
						]
					}
				},
				"required": [
					"name",
					"source"
				]
			}
		}
	},
	"required": [
		"magicvariant",
		"item"
	],
	"additionalProperties": false
}