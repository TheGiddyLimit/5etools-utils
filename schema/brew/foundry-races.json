					}
				},
				"flags": {
					"$ref": "util-foundry.json#/$defs/foundryFlagsObject"
				},
				"img": {
					"type": "string"
				},
				"_merge": {
					"type": "object",
					"description": "If our \"X\" (e.g. \"system\") should be merged with any base \"X\", rather than overwriting.",
					"properties": {
						"system": {
							"const": true
						},
						"chooseSystem": {
							"const": true
						},
						"effects": {
							"const": true
						},
						"flags": {
							"const": true
						},
						"chooseFlags": {
							"const": true
						}
					}
				},
				"entryData": {
					"$ref": "util-foundry.json#/$defs/entryDataObject"
				}
			},
			"required": [
				"name",
				"source"
			]
		},
		"race": {
			"anyOf": [
				{
					"$ref": "#/$defs/raceData"
				},
