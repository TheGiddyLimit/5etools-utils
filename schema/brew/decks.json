				{
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						},
						"set": {
							"type": "string"
						},
						"page": {
							"$ref": "util.json#/$defs/page"
						},
						"srd": {
							"$ref": "util.json#/$defs/srd"
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"face": {
							"$ref": "entry.json#/$defs/entryImage"
						},
						"back": {
