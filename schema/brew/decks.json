{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "decks.json",
	"version": "1.0.1",
	"type": "object",
	"$defs": {
		"deckData": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"page": {
					"$ref": "util.json#/$defs/page"
				},
				"srd": {
					"$ref": "util.json#/$defs/srd"
				},
				"cards": {
					"type": "array",
					"$comment": "Non-unique entries are permitted, to allow explicit ordering of duplicate cards.",
					"items": {
						"oneOf": [
							{
								"type": "string"
							},
							{
								"type": "object",
								"properties": {
									"uid": {
										"type": "string"
									},
									"count": {
										"type": "integer"
									},
									"replacement": {
										"const": true
									}
								},
								"required": [
									"uid"
								],
								"minProperties": 2,
								"additionalProperties": false
							}
						]
					},
					"minItems": 1
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"back": {
					"$ref": "entry.json#/$defs/entryImage"
				},
				"hasCardArt": {
					"description": "A hint used by filters, determining whether or not this deck should be filtered out by default.",
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"deck": {
			"anyOf": [
				{
					"type": "object",
