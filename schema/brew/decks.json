								"pantheon": {
									"description": "Used in deity data",
									"type": "string"
								},
								"shortName": {
									"description": "Used in subclass data",
									"type": "string"
								},
								"className": {
									"description": "Used in subclass data",
									"type": "string"
								},
								"classSource": {
									"description": "Used in subclass data",
									"type": "string"
								},
								"_mod": {
									"$ref": "util.json#/$defs/_modObject"
								},
								"_trait": {
									"type": "object",
									"properties": {
										"name": {
											"type": "string"
										},
										"source": {
											"type": "string"
										}
									},
									"required": [
										"name",
										"source"
									]
								},
								"_preserve": {
									"type": "object",
									"patternProperties": {
										".*": {
											"const": true
										}
									}
								}
							},
							"required": [
								"name",
								"source"
							],
							"additionalProperties": false
						}
					},
					"additionalProperties": false,
					"required": [
						"_copy"
					]
				}
			]
		},
