									}
								]
							},
							"minItems": 1
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"back": {
							"$ref": "entry.json#/$defs/entryImage"
						},
						"hasCardArt": {
							"description": "A hint used by filters, determining whether or not this deck should be filtered out by default.",
							"type": "boolean"
						}
					},
					"additionalProperties": false,
					"required": [
						"name",
						"source",
						"cards"
					]
				},
				{
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
