	"properties": {
		"_meta": {
			"$ref": "util.json#/$defs/metaBlock"
		},
		"deck": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/$defs/deck"
			}
		},
		"card": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
