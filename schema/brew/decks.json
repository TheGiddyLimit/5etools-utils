												"type": "string"
											},
											"count": {
												"type": "integer"
											},
											"replacement": {
												"const": true
											}
										},
										"required": [
											"uid"
										],
										"minProperties": 2,
										"additionalProperties": false
									}
								]
							},
							"minItems": 1
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
